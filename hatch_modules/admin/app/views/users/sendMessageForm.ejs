<div class="row-fluid">

    <% include _sidebar %>

    <div class="span10">
        <div class="module">
            <div class="content">
                <h3><%- __('Send message') %></h3>
                <p><%- __('This message will be sent to') %>
                    <% if(selectedUsers.length > 0) { %>
                        <strong><%- selectedUsers.length %> <%- __('selected community members') %></strong>
                    <% } else { %>
                        <strong><%- __('all community members') %></strong>.
                    <% } %>
                </p>

                <hr/>

                <%- formTagBegin({ action: pathTo.sendMessage, remote: true, method: 'post', id: 'send-message-form' }) %>
                    <input type="hidden" name="selectedUsers" value='<%- JSON.stringify(selectedUsers) %>' />

                    <div class="control-group">
                        <label class="control-label" for="title"><%- __('Message subject') %></label>
                        <div class="controls">
                            <input type="text" class="input-xlarge span4" id="subject" name="subject" value="">
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="description"><%- __('Message body') %></label>
                        <div class="controls">
                            <textarea id="body" name="body" class="input-xlarge span6 richtext" rows="10"></textarea>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><%- __('Send message') %></button>
                        <a href="<%- pathTo.community() %>" class="btn"><%- __('Cancel') %></a>
                    </div>
                <%- formTagEnd() %>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        //convert richtexts
        setupRichtextEditors();

        //bind the form ajax
        $('#send-message-form').bind('ajax:success', function(e, data) {
            $.noty({text: '<i class="icon-' + data.icon + '"></i> ' + data.message, type: data.status});

            if(data.status == "success") {
                //refresh the page
                setTimeout(function() { window.location = '<%- pathTo.community() %>'; }, 1000);
            }
        });
    });
</script>
