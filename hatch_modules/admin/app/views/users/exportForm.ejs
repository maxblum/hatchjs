<div class="page-title">
    <h3><%- t('users.headers.exportMembers') %></h3>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-body">
                <%- formTagBegin(pathTo.export, { class: 'form-vertical form-slim', method: 'post' }) %>
                    <div class="form-group">
                        <label class="form-label" for="format"><%- t('users.labels.exportFormat') %></label>
                        <div class="controls">
                            <select id="format" name="format" class="form-control">
                                <option value="csv">CSV</option>
                                <option value="json">JSON</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><%- t('users.actions.exportMembers') %></button>
                    </div>
                <%- formTagEnd() %>
            </div>
        </div>
    </div>
</div>