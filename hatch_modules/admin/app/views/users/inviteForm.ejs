<div class="row">

    <% include _sidebar %>

    <div class="span10">
        <div class="module">
            <div class="content">
                <h3>Invite users</h3>
                <p>Invitations to join the community will be emailed to the specified users</p>

                <hr/>

                <%- formTagBegin({ action: pathTo.sendInvites, remote: true, method: 'post', id: 'invite-form' }) %>
                    <div class="control-group">
                        <label class="control-label"><%- __('Select users to invite') %></label>
                        <div class="controls">
                            <select id="usernames" name="usernames[]" multiple="multiple" class="span4 chzn-select-create" data-placeholder="<%= __('Enter some usernames and / or email addresses...') %>">

                            </select>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="subject"><%- __('Invite subject') %></label>
                        <div class="controls">
                            <input type="text" id="subject" name="subject" class="span4"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="body"><%- __('Invite text') %></label>
                        <div class="controls">
                            <textarea id="body" name="body" class="input-xxlarge span6 richtext" rows="10"></textarea>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><%- __('Send invites') %></button>
                        <a href="<%- pathTo.community() %>" class="btn"><%- __('Cancel') %></a>
                    </div>
                <%- formTagEnd() %>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        //convert richtexts
        setupRichtextEditors();

        //bind the form ajax
        $('#invite-form').bind('ajax:success', function(e, data) {
            $.noty({text: '<i class="icon-' + data.icon + '"></i> ' + data.message, type: data.status});

            if(data.status == "success") {
                //refresh the page
                setTimeout(function() { window.location = '<%- pathTo.community() %>'; }, 1000);
            }
        });
    });
</script>