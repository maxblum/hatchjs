<div class="row">

    <%- include _sidebar %>

    <div class="span10">
        <div class="module">
            <div class="content">

                <h3>Manage tags</h3>

                <hr/>

                <table class="table table-striped" id="member-lists-table">
                    <thead>
                    <tr>
                        <th colspan="2" width="">
                            Tag name
                        </th>
                        <th width="10%">
                            Filter
                        </th>
                        <th width="10%">
                            Posts
                        </th>
                        <th width="7%">
                            Action
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if(tags.length == 0) { %>
                    <tr>
                        <td colspan="5">No tags have been defined</td>
                    </tr>
                    <% } %>
                    <% tags.forEach(function(tag) { %>
                        <% if(!tag) return; %>
                    <tr>
                        <td width="2%">
                            <i class="icon-tag"></i>
                        </td>
                        <td>
                            <%- linkTo(tag.name, pathTo.content(tag.id.toString())) %>
                        </td>
                        <td>
                            <% if(tag.filter) { %>
                                <i class="icon-ok"></i>
                            <% } else { %>
                                -
                            <% } %>
                        </td>
                        <td>
                            <%- formatNumber(tag.contentCount) %>
                        </td>
                        <td>
                            <%- linkTo(Edit, pathTo.editTag(tag.id.toString())) %>
                            &nbsp;
                            <%- linkToRemote('<i class="icon-remove"></i>', pathTo.deleteTag(tag.id.toString()), { "data-confirm": "Are you sure you wish to delete this tag?" }) %>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
