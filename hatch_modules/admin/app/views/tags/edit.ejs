<div class="page-title">
    <h3><%= t('tags.headers.edit') %></h3>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-body">
                <%- formTagBegin({ action: pathTo.updateTag(sectionName, theTag.id), remote: true, method: 'PUT', id: 'tag-form', class: 'form-slim' }) %>
                    <input type="hidden" name="type" value="<%- theTag.type %>" />
                    <% include _form %>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><%= t('tags.actions.save') %></button>
                        <a href="<%- pathTo.tags(type) %>" class="btn"><%= t('common.cancel') %></a>
                    </div>
                <%- formTagEnd() %>
            </div>
        </div>
    </div>
</div>
