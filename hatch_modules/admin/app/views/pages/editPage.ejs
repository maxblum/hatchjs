<div class="row">

  <%- include _sidebar %>

  <div class="span10">
    <div class="module">
      <div class="content">

        <h3><%- __('Edit page') %></h3>

        <hr/>

        <%- formTagBegin({action: pathTo.pages(), remote: true, id: 'page_form', class: 'form-vertical'}) %>
          <input type="hidden" name="_method" value="PUT" />

        <%- include _pageForm %>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> <%- __('Update page') %></button>
          <%- linkTo(__('Cancel'), pathTo.pages(), {class: 'btn'}) %>
        </div>
        <%- formTagEnd() %>
      </div>
    </div>
  </div>
</div>
