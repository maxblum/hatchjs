<div class="row-fluid">

  <%- include _sidebar %>

  <div class="span10">
    <div class="module">
      <div class="content">

        <h3><%- t('pages.headers.edit') %></h3>

        <hr/>

        <%- formTagBegin({action: pathTo.page(page.id), remote: true, id: 'page_form', class: 'form-vertical'}) %>
          <input type="hidden" name="_method" value="PUT" />

        <%- include _pageForm %>
        <div class="form-actions">
          <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> <%- t('pages.actions.save') %></button>
          <%- linkTo(t('pages.actions.cancel'), pathTo.pages(), {class: 'btn'}) %>
        </div>
        <%- formTagEnd() %>
      </div>
    </div>
  </div>
</div>
