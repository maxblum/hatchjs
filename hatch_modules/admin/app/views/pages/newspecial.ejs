<div class="row-fluid">

    <% include _sidebar %>

  <div class="span10">
    <div class="module">
      <div class="content">

        <h3><%- __('Add new special page') %></h3>

        <hr/>

        <%- errorMessagesFor(page) %>

        <%- formTagBegin({action: pathTo.groupPages(req.group), remote: true, method: 'POST', id: 'page_form', class: 'form-vertical'}) %>
            <input type="hidden" name="parentId" value="<%- req.pagesTree[0].id %>" />

            <% if (!page.id) { %>
            <div class="control-group">
                <label for="type" class="control-label"><%- __('Special page type') %></label>
                <div class="controls">
                    <select id="type" name="type">
                        <% specials.forEach(function (sp) { %>
                            <option <%- sp.type == type ? 'selected="selected"':'' %>> <%- sp.type %> </option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <% } %>

            <div class="control-group">
                <label for="page_title" class="control-label"><%- __('Page title') %></label>
                <div class="controls">
                    <input type="text" name="title" id="page_title" class="input-xlarge" value="<%- page.title || '' %>" />
                </div>
            </div>

            <div class="control-group">
                <label for="page_url" class="control-label"><%- __('URL') %></label>
                <div class="controls">
                    <input type="text" name="url" id="page_url" class='input-xlarge' value="<%- page.url %>" />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> <%- __('Create page') %></button>
                <%- linkTo(__('Cancel'), pathTo.groupPages(req.group), {class: 'btn'}) %>
            </div>
        <%- formTagEnd() %>

      </div>
    </div>
  </div>
</div>
