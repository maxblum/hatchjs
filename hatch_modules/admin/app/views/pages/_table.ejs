<% pages.forEach(function (page) { %>
<tr class="page-item level<%- page.level || 0 %> <%- page.level == 0 ? 'homepage':'' %>" data-id="<%- page.id %>"
  data-path="<%- page.url %>">
  <td>
    <i class="<%- page.level == 0 ? 'icon-home':'icon-move' %>"></i>
    <span class="page-title"><%= page.title %></span> </td>
  <td> <%- page.url ? linkTo('/' + page.url.split('/').pop(), '//' + page.url) : '' %> </td>
  <td> <%- __('Public') %> </td>
  <td> <%- /true/.test(page.hideFromNavigation) ? 'Hidden' : 'Visible' %> </td>
  <td>
    <%- linkTo(__('Edit'), pathTo.group_page(req.group.id, page.id), {class: '' }) %>
    &nbsp;
    <%- linkTo('<i class="icon-remove"></i>', pathTo.group_page(req.group.id, page.id), {remote: true, method: 'delete', rel: 'tooltip', 'data-original-title': __('Delete this page'), rel: 'delete-page'}) %>
  </td>
</tr>
<% }); %>

<tr class="splitter">
    <td colspan="5">
        <br/>
    </td>
</tr>

<tr class="new-page-form" style="display : none;">
    <td colspan="5">
        <%- formTagBegin({action: pathTo.group_pages({group_id: req.group.id, format: 'json'}), remote: true, id: 'newPageFormInline' }) %>
            <input type="hidden" name="parentId" id="parentId" />
            <input type="hidden" name="order" id="order" />

            <i class="icon-plus-sign"></i>
            <input type="text" name="title" class="span6" placeholder="<%- __('Type your page title and hit enter ...') %>" />

            <div class="pull-right">
              <button type="submit" class="btn-link"><%- __('Add') %></button>
              <button type="button" class="btn-link" id="cancelButton"><%- __('Cancel') %></button>
            </div>
        <%- formTagEnd() %>
    </td>
</tr>

<tr class="page-item level0 new-page" data-id="new">
    <td colspan="5">
        <i class="icon-move"></i>
        <span class="page-title drag"><%- __('Drag me onto the sitemap to add a new page') %></span>
    </td>
</tr>
