<div class="row-fluid">

    <% include _sidebar %>

  <div class="span10">
    <div class="module">
      <div class="content">

        <h3><%- t('pages.headers.new') %></h3>

        <hr/>

        <%- formTagBegin({action: pathTo.pages(), remote: true, id: 'page_form', class: 'form-vertical'}) %>
        <% include _pageForm %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary"><i class="icon-ok icon-white"></i> <%- t('pages.actions.create') %></button>
            <%- linkTo(t('pages.actions.cancel'), pathTo.pages(), {class: 'btn'}) %>
          </div>
        <%- formTagEnd() %>

      </div>
    </div>
  </div>
</div>
