<%- formTagBegin({remote: true, action: pathFor('user').login() + '.json', id: 'loginForm', class: 'form-vertical', method: 'post' }) %>
    <div class="modal fade" id="login" style="display : none; overflow : visible; width : 400px; margin-left : -200px;">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">Ã—</a>
            <h3><%- __('Sign in') %></h3>
        </div>
        <div class="modal-body">
            <div id="loginErrorMessages" class="alert alert-error hide"></div>

            <div class="control-group">
                <label class="control-label" for="email"><%- __('Username or Email address') %></label>
                <div class="controls">
                    <input type="text" class="" id="email" name="email" autofocus="autofocus"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="password"><%- __('Password') %></label>
                <div class="controls">
                    <input type="password" class="" id="password" name="password">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                    <input type="checkbox" value="1" name="rememberme">
                    <%- __('Remember me for 30 days') %>
                    </label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <p style="float : left; margin : 5px 0 0 1px;">
                <a href="#forgotPassword" data-toggle="modal" data-dismiss="modal"><%- __('Forgot password') %>?</a>
            </p>

            <div class="btn-toolbar" style="margin : 0;">
                <div class="btn-group">
                  <button class="btn btn-primary" type="submit"><%- __('Sign in') %></button>
                  <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" style="text-align: left;">
                      <%- contentFor('login') %>
                  </ul>
                </div>
                <div class="btn-group">
                    <a class="btn" data-dismiss="modal"><%- __('Cancel') %></a>
                </div>
            </div>
        </div>
    </div>
<%- formTagEnd() %>

<script type="text/javascript">
  $(function () {
      $('#loginForm').bind('ajax:success', function(e, data) {
          if (data.user) return location.reload();
          $('#loginErrorMessages').hide().fadeIn().html(data.message);
      });
  });
</script>
