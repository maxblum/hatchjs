<%- formTagBegin({action: pathFor('user').register(), remote: true, method: 'POST', class: 'form-horizontal' }) %>
    <input type="hidden" name="hasPassword" value="true" />

    <div class="modal fade" id="register" style="display : none; overflow : visible;">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">Ã—</a>
            <h3><%- __('Register a new account') %></h3>
        </div>
        <div class="modal-body">
            <br />
            <div class="control-group">
                <label class="control-label" for="email"><%- __('Email address') %></label>
                <div class="controls">
                    <input type="email" class="" id="email" name="email" autofocus="autofocus"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="username"><%- __('Username') %></label>
                <div class="controls">
                    <input type="text" class="" id="username" name="username">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="password"><%- __('Password') %></label>
                <div class="controls">
                    <input type="password" class="" id="password" name="password">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <label class="checkbox">
                    <input type="checkbox" id="optionsCheckbox" name="terms" value="accepted">
                    <%- __('I agree to the') %> <%- linkTo(__('Terms and conditions'), specialPagePath('terms'), { target: '_new' }) %>
                    </label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <p style="float : left; margin : 5px 0 0 1px;">
                <%- __('Already have an account') %>? <a href="#login" data-toggle="modal" data-dismiss="modal"><%- __('Sign in') %></a>
            </p>

            <div class="btn-toolbar" style="margin : 0;">
                <div class="btn-group">
                  <button class="btn btn-primary" type="submit"><%- __('Register') %></button>
                  <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" style="text-align: left;">
                    <%- contentFor('login') %>
                  </ul>
                </div>
                <div class="btn-group">
                    <a class="btn" data-dismiss="modal"><%- __('Cancel') %></a>
                </div>
            </div>
        </div>
    </div>
  <%- formTagEnd() %>
